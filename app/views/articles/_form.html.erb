<%= form_for @article do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation"></div>
      <h2>
        <%= pluralize(@article.errors.count, "error") %>
        prohibited this article from being saved:
      </h2>

      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
  <% end %>

  <p>
    <%= f.label :title %>
    <br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %>
    <br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.label :image %>
    <br>
    <%= image_tag @article.image_url(:sm) unless @article.image.file.nil? %>
    <br>
    <%= f.file_field :image %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>